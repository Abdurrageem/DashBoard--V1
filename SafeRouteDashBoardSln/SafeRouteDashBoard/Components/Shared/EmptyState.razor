@* Empty State Component *@

<MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Style="min-height: 400px; padding: 48px;">
    @if (!string.IsNullOrEmpty(Icon))
    {
        <MudIcon Icon="@Icon" Style="color: #D1D5DB; font-size: 96px;" />
    }
    
    <MudText Typo="Typo.h6" Style="color: #1F2937; font-weight: 600; margin-top: 16px;">
        @Title
    </MudText>
    
    @if (!string.IsNullOrEmpty(Description))
    {
        <MudText Typo="Typo.body1" Style="color: #6B7280; text-align: center; max-width: 400px;">
            @Description
        </MudText>
    }
    
    @if (ActionButton != null)
    {
        <div style="margin-top: 24px;">
            @ActionButton
        </div>
    }
</MudStack>

@code {
    [Parameter] public string Icon { get; set; } = Icons.Material.Filled.Inbox;
    [Parameter] public string Title { get; set; } = "No data available";
    [Parameter] public string Description { get; set; } = string.Empty;
    [Parameter] public RenderFragment? ActionButton { get; set; }
}
